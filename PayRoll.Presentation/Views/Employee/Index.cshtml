@using PayRoll.Presentation.ViewModels

@model List<EmployeeListViewModel>
<a class="btn btn-info" asp-action="Create" asp-controller="Employee">Create!</a>
<table class="table table-striped">
    <thead>
        <tr>

           
            <th>
                EmployeeNumber
            </th>
            <th>
                ImageURL
            </th>
            <th>
                FullName
            </th>
            <th>
                Gender
            </th>
            <th>
                Designation
            </th>
            <th>
                City
            </th>
            
           
            <th>
                DateOfJoined
            </th>
           
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>


               
                <td>
                    @item.EmployeeNumber
                </td>
                <td>
                    <img src="@item.ImageURL" height="60px" width="80px" />
                </td>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Gender
                </td>
                <td>
                    @item.Designation
                </td>
                <td>
                    @item.City
                </td>
                
                <td>
                    @item.DateOfJoined
                </td>
               
                <td>
                    <a class="btn btn-info me-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger me-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    
                </td>
            </tr>
        }

       
        </tbody>

    </table>